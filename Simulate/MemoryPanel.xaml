						<LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
							<GradientStop Color="#FFF0F0F0" Offset="0"/>
							<GradientStop Color="#00505050" Offset="1"/>
							<GradientStop Color="#FF4F4F4F" Offset="1"/>
						</LinearGradientBrush>
					</Menu.Background>
           
