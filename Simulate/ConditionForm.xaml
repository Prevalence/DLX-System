<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Simulate="clr-namespace:Simulate"
    x:Class="Simulate.ConditionForm"
    Title="ConditionForm" Height="293" Width="323" ShowInTaskbar="False" Background="#FF000000" ResizeMode="NoResize" Icon="/Simulate;component/Icon/condition.png">
    <Grid Width="Auto">
        
