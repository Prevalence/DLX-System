<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Edit.TipWindow"
    Title="TipWindow" Height="Auto" Width="Auto" AllowsTransparency="True" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" Background="{x:Null}" BorderBrush="{x:Null}">
    <Window.Resources>
        <Style x:Key="TabLabelStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="Foreground" Value="#FF464646"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="Grid" HorizontalAlignment="Left" VerticalAlignment="Top">
    	<Rectangle Fill="#FF464646" Stroke="#FFC8C8C8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto"/>
    	<StackPanel HorizontalAlignment="Stretch" x:Name="stackPanel" VerticalAlignment="Stretch" Width="Auto" Height="Auto" Margin="5,5,5,5"/>
    </Grid>
</Window>
