<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Edit.TreePanel"
    Height="Auto" Width="Auto">
    <Grid>
           <Grid.Resources>
            <Style TargetType="TreeViewItem">
                <Style.Resources>
                    <!--SelectedItem with focus-->
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF60AAFF" Opacity="1"/>
                    <!--SelectedItem without focus-->
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF5096FF" Opacity="1"/>
                </Style.Resources>
            </Style>
        </Grid.Resources> 
    	<TreeView x:Name="ProjectTreeViewer" Background="#FF5A5A5A" BorderBrush="#FF5A5A5A" Foreground="{x:Null}"/>
            
    </Grid>
</UserControl>
